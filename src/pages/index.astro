            gap: 30px;
        }

        .nav-link {
            text-decoration: none;
            color: #666;
            font-size: 14px;
            font-weight: 400;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #000;
        }

        /* Main Content */
