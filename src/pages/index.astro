            border-radius: 16px;
            padding: 30px 25px;
            z-index: 5;
            opacity: 0;
            transform: translateX(-100px);
            will-change: opacity, transform;
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
            overflow-y: auto;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        }

        .projects-sidebar.visible {
