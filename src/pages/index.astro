            font-weight: 500;
            color: #4c4c4c;
            letter-spacing: -0.02em;
            text-align: left;
            position: relative;
            z-index: 2;
        }

        .static-text {
            margin-right: 0.1em;
        }

        .animated-text {
            position: relative;
            display: inline-block;
            min-width: 1em;
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .animated-text.blur-out {
            filter: blur(10px);
            opacity: 0;
            transform: translateY(-20px);
        }

        .animated-text.blur-in {
            filter: blur(0px);
            opacity: 1;
            transform: translateY(0px);
        }

        /* Bottom Navigation */
