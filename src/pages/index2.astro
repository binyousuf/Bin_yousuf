            font-weight: 600;
            color: #333;
        }

        .favorite-icon {
            font-size: 20px;
            color: #999;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .favorite-icon:hover {
            color: #333;
        }

        /* Projects List */
        .projects-list {
            space-y: 2px;
        }

        .project-item {
            display: flex;
            align-items: flex-start;
            padding: 15px 0;
            cursor: pointer;
            transition: all 0.3s ease;
            border-radius: 8px;
            position: relative;
        }

        .project-item:hover {
            background-color: rgba(0, 0, 0, 0.02);
            padding-left: 10px;
        }

        .project-item.active {
            background-color: rgba(0, 0, 0, 0.05);
            padding-left: 10px;
        }

        .project-number {
            font-size: 12px;
            color: #999;
            margin-right: 15px;
            font-weight: 500;
            min-width: 30px;
        }

        .project-info {
            flex: 1;
        }

        .project-name {
            font-size: 14px;
            font-weight: 500;
            color: #333;
            margin-bottom: 4px;
            line-height: 1.4;
        }

        .project-location {
            font-size: 12px;
            color: #999;
            line-height: 1.3;
        }

        /* Content Area */
        .content-area {
            margin-left: 400px;
            flex: 1;
            position: relative;
        }

        .project-display {
            height: 100vh;
            position: relative;
            opacity: 0;
            transform: translateY(50px);
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .project-display.active {
            opacity: 1;
            transform: translateY(0);
        }

        .project-display.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .project-image {
            width: 100%;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

        .project-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.8s ease;
        }

        .project-item:hover + .content-area .project-display.active .project-image img,
        .project-display:hover .project-image img {
            transform: scale(1.02);
        }

        /* Project Details */
        .project-details {
            position: absolute;
            bottom: 40px;
            left: 40px;
            z-index: 10;
        }

        .award-badge {
            display: flex;
            align-items: center;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 15px 20px;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            transform: translateY(20px);
            opacity: 0;
            animation: slideUp 0.8s ease forwards;
            animation-delay: 0.5s;
        }

        .award-icon {
            font-size: 24px;
            margin-right: 15px;
        }

        .award-text strong {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #333;
            margin-bottom: 2px;
        }

        .award-category {
            font-size: 12px;
            color: #999;
        }

        @keyframes slideUp {
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* Responsive Design */
