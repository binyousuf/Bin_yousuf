---
// src/layouts/ProjectLayout.astro
import type { ProjectData } from '../types/project';
import { Image } from 'astro:assets';

export interface Props {
    project: ProjectData;
}

const { project } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{project.name} - Project Portfolio</title>
    <meta name="description" content={project.description}>
</head>
<body>
    <main class="project-page">
        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-content">
                <h1>{project.name}</h1>
                <p>{project.description}</p>
            </div>
            <div class="hero-image">
                <Image 
                    src={project.heroImage.src} 
                    alt={project.heroImage.alt}
                    width={project.heroImage.width}
                    height={project.heroImage.height}
                />
            </div>
        </section>

        <!-- Project Info -->
        <section class="project-info">
            <div class="info-grid">
                <div class="info-item">
                    <h3>Typology</h3>
                    <p>{project.info.typology.join(', ')}</p>
                </div>
                <div class="info-item">
                    <h3>Status</h3>
                    <p>{project.info.status}</p>
                </div>
                <div class="info-item">
                    <h3>Year</h3>
                    <p>{project.info.yearOfDesign}</p>
                </div>
                <div class="info-item">
                    <h3>Location</h3>
                    <p>{project.info.location}</p>
                </div>
                <div class="info-item">
                    <h3>Area</h3>
                    <p>{project.info.square}</p>
                </div>
            </div>
        </section>

        <!-- About Project -->
        <section class="about-project">
            <h2>About the Project</h2>
            <div class="about-content">
                <p set:html={project.aboutProject.replace(/\n/g, '<br>')}></p>
            </div>
        </section>

        <!-- Gallery -->
        <section class="gallery">
            <h2>Gallery</h2>
            <div class="gallery-grid">
                {project.galleryImages.map((image) => (
                    <div class="gallery-item">
                        <Image 
                            src={image.src} 
                            alt={image.alt}
                            width={image.width}
                            height={image.height}
                        />
                    </div>
                ))}
            </div>
        </section>
    </main>
</body>
</html>

<style>
    .project-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .hero {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 3rem;
        align-items: center;
    }

    .hero-content h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .hero-content p {
        font-size: 1.2rem;
        line-height: 1.6;
        color: #666;
    }

    .hero-image img {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .project-info {
        margin-bottom: 3rem;
        padding: 2rem;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .info-item h3 {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-item p {
        font-size: 1.1rem;
        color: #666;
    }

    .about-project {
        margin-bottom: 3rem;
    }

    .about-project h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: #333;
    }

    .about-content p {
        font-size: 1.1rem;
        line-height: 1.7;
        color: #555;
    }

    .gallery h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: #333;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .gallery-item img {
        width: 100%;
        height: auto;
        border-radius: 8px;
        transition: transform 0.3s ease;
    }

    .gallery-item:hover img {
        transform: scale(1.05);
    }

    @media (max-width: 768px) {
        .hero {
            grid-template-columns: 1fr;
        }
        
        .hero-content h1 {
            font-size: 2rem;
        }
        
        .project-page {
            padding: 1rem;
        }
    }
</style>