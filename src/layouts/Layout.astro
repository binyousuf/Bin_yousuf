---
// src/layouts/Layout.astro - Updated with Footer
import Footer from '../components/Footer.tsx';
import logoImage from '../assets/projects/logo.webp';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "IND Design Studio - Architecture Portfolio" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href={logoImage.src} type="image/webp" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <slot />
    
    <!-- Footer Component -->
    <Footer client:load />
    
    <style is:global>
      @import '../styles/global.css';
    </style>
  </body>
</html>