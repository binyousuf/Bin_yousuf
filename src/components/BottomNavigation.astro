---
import { getProjectCounts } from '../data/projects.js';

const projectCounts = getProjectCounts();
---

<div class="bottom-nav">
  <a href="#emaar" class="bottom-link">
    Emaar <sup>{projectCounts.emaar}</sup>
  </a>
  <a href="#hmr" class="bottom-link">
    HMR <sup>{projectCounts.hmr}</sup>
  </a>
</div>

<style>
  .bottom-nav {
    position: fixed;
    bottom: 40px;
    left: 40px;
    display: flex;
    gap: 40px;
    z-index: 10;
  }

  .bottom-link {
    text-decoration: none;
    color: #999;
    font-size: 14px;
    font-weight: 400;
    transition: color 0.3s ease;
  }

  .bottom-link:hover {
    color: #333;
  }

  .bottom-link sup {
    font-size: 10px;
    margin-left: 2px;
  }

  @media (max-width: 768px) {
    .bottom-nav {
      bottom: 20px;
      left: 20px;
      gap: 20px;
      flex-wrap: wrap;
    }
  }
</style>